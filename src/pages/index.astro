---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Fetch pages only (home)
const allPages = await getCollection('pages');
const indexPage = allPages.find(p => p.slug === 'index');

const title = indexPage?.data.title || 'Portfolio';
const description = indexPage?.data.description || '';
---

<Layout title={title} description={description}>
  <!-- HERO -->
  <section class="hero">
    <div class="hero-text">
      <h1>Your Name</h1>
      <p class="subtitle">
        Portfolio placeholder â€” content will be added later.
      </p>
    </div>

    <div class="hero-photo">
      <div class="photo-circle">
        Photo
      </div>
    </div>
  </section>

  <!-- PORTFOLIO CARDS -->
  <section class="portfolio">
    <div class="portfolio-grid">
      <div class="portfolio-card"></div>
      <div class="portfolio-card"></div>
      <div class="portfolio-card"></div>
    </div>
  </section>
</Layout>

<style>
/* HERO */
.hero {
  max-width: 1100px;
  margin: 8rem auto 6rem;
  padding: 4rem 3rem;

  display: grid;
  grid-template-columns: 1.2fr 0.8fr;
  align-items: center;
  gap: 4rem;

  background: linear-gradient(
    180deg,
    #ffffff 0%,
    var(--color-bg) 100%
  );
  border-radius: 32px;
}

.hero-text h1 {
  font-size: 4.6rem;
  margin-bottom: 1.2rem;
}

.subtitle {
  font-size: 1.9rem;
  color: color(var(--color-base) l(+30%));
  max-width: 420px;
}

.photo-circle {
  width: 240px;
  height: 240px;
  border-radius: 50%;
  background: linear-gradient(
    145deg,
    #ffffff,
    var(--color-bg)
  );
  border: 2px solid var(--color-border);
  box-shadow: 0 20px 40px rgba(0,0,0,0.06);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.4rem;
  color: var(--color-primary);
}

/* PORTFOLIO */
.portfolio {
  max-width: 1100px;
  margin: 4rem auto 8rem;
  padding: 0 2rem;
}

.portfolio-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 2.5rem;
}

.portfolio-card {
  height: 220px;
  border-radius: 24px;
  background: #ffffff;
  border: 1px solid var(--color-border);
  box-shadow: 0 10px 30px rgba(0,0,0,0.05);
  transition: all 0.35s ease;
}

.portfolio-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 45px rgba(0,0,0,0.08);
  border-color: var(--color-primary);
}


/* RESPONSIVE */
@media (max-width: 850px) {
  .hero {
    grid-template-columns: 1fr;
    text-align: center;
  }
}
</style>
