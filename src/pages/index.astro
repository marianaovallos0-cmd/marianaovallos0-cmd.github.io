---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Fetch pages only (home)
const allPages = await getCollection('pages');
const indexPage = allPages.find(p => p.slug === 'index');

const title = indexPage?.data.title || 'Portfolio';
const description = indexPage?.data.description || '';
---

<Layout title={title} description={description}>
  <section class="hero">
    <div class="hero-text">
      <h1>Your Name</h1>
      <p class="subtitle">
        Portfolio placeholder â€” content will be added later.
      </p>
    </div>

    <div class="hero-photo">
      <div class="photo-circle">
        Photo
      </div>
    </div>
  </section>
</Layout>

<style>
.hero {
  max-width: 1100px;
  margin: 6rem auto;
  padding: 0 2rem;

  display: grid;
  grid-template-columns: 1fr 320px;
  align-items: center;
  gap: 3rem;
}

.hero-text h1 {
  font-size: 4.2rem;
  margin-bottom: 1rem;
}

.subtitle {
  font-size: 1.8rem;
  color: color(var(--color-base) l(+30%));
  max-width: 420px;
}

.hero-photo {
  display: flex;
  justify-content: center;
}

.photo-circle {
  width: 220px;
  height: 220px;
  border-radius: 50%;
  background: var(--color-bg);
  border: 2px solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.4rem;
  opacity: 0.6;
}

/* Responsive */
@media (max-width: 850px) {
  .hero {
    grid-template-columns: 1fr;
    text-align: center;
  }
}
</style>
