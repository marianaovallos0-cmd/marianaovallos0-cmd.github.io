---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Fetch pages only (home)
const allPages = await getCollection('pages');
const indexPage = allPages.find(p => p.slug === 'index');

const title = indexPage?.data.title || 'Portfolio';
const description = indexPage?.data.description || '';
---

<Layout title={title} description={description}>
 
  <!-- HERO -->
  <section class="hero">
    <div class="hero-text">
      <p
        class="intro"
        data-en="Hello, I’m"
        data-es="Hola, soy">
        Hello, I’m
      </p>

      <h1>Mariana Ovallos</h1>

      <p
        class="subtitle"
        data-en="Systems engineering student focused on cybersecurity, databases, and practical technology projects."
        data-es="Estudiante de ingeniería de sistemas enfocada en ciberseguridad, bases de datos y proyectos tecnológicos.">
        Systems engineering student focused on cybersecurity, databases, and practical technology projects.
      </p>
    </div>

    <div class="hero-photo">
      <div class="photo-circle">
        <img src="/profile.jpg" alt="Profile photo" />
      </div>
    </div>
  </section>

  <!-- PRESENTATION -->
  <section class="presentation">
    <div class="presentation-box">
      <h2
        data-en="Presentation"
        data-es="Presentación">
        Presentation
      </h2>

      <video
  class="presentation-video"
  controls
  preload="metadata">
  <source src="/video/prueba.mp4" type="video/mp4" />
  Your browser does not support the video tag.
</video>


      <p
        class="presentation-text"
        data-en="Welcome to my personal portfolio. Here you will find my academic projects, technical evidence, and professional growth."
        data-es="Bienvenido a mi portafolio personal. Aquí encontrarás mis proyectos académicos, evidencias técnicas y crecimiento profesional.">
        Welcome to my personal portfolio. Here you will find my academic projects, technical evidence, and professional growth.
      </p>
    </div>
  </section>

  <!-- PORTFOLIO CARDS -->
  <section class="portfolio">
    <div class="portfolio-grid">
      <div class="portfolio-card"></div>
      <div class="portfolio-card"></div>
      <div class="portfolio-card"></div>
    </div>
  </section>
</Layout>

<style>
/* HERO */
.hero {
  max-width: 1100px;
  margin: 6rem auto 4rem;
  padding: 4rem 5rem;

  display: grid;
  grid-template-columns: 1.2fr 0.8fr;
  align-items: center;
  gap: 3rem;

  background: linear-gradient(
    135deg,
    #c5a68a,
    #8b6a55
  );

  color: white;
  border-radius: 36px;
}

.intro {
  font-size: 1.5rem;
  opacity: 0.9;
  margin-bottom: 0.6rem;
}

.hero-text h1 {
  color: white;
  font-size: 4.6rem;
  line-height: 1.1;
  margin-bottom: 1.2rem;
  font-weight: 800;
  text-shadow: 0 6px 18px rgba(0,0,0,0.15);
}

.subtitle {
  color: rgba(255,255,255,0.9);
  font-size: 1.8rem;
  max-width: 420px;
  line-height: 1.6;
}

.hero-photo {
  display: flex;
  justify-content: center;
}

.photo-circle {
  width: 220px;
  height: 220px;
  border-radius: 50%;
  overflow: hidden;
  border: 4px solid rgba(255,255,255,0.6);
  box-shadow: 0 20px 60px rgba(0,0,0,0.15);
}

.photo-circle img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* PORTFOLIO */
.portfolio-card {
  height: 220px;
  border-radius: 24px;
  background: var(--color-card);
  border: 2px solid transparent;
  box-shadow: 0 15px 40px rgba(0,0,0,0.06);
  transition: all 0.35s ease;
  position: relative;
  overflow: hidden;
}

.portfolio-card::before {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    var(--color-primary),
    var(--color-accent)
  );
  opacity: 0;
  transition: opacity 0.35s ease;
}

.portfolio-card:hover::before {
  opacity: 0.08;
}

.portfolio-card:hover {
  transform: translateY(-10px);
  border-color: var(--color-primary);
}

/* PRESENTATION */
.presentation {
  max-width: 900px;
  margin: 4rem auto 6rem;
  padding: 0 2rem;
}

.presentation-box {
  background: var(--color-card);
  border-radius: 32px;
  padding: 3rem;
  box-shadow: 0 20px 50px rgba(0,0,0,0.06);
  text-align: center;
}

.presentation-box h2 {
  margin-bottom: 2rem;
}

.video-placeholder {
  width: 100%;
  aspect-ratio: 16/9;
  border-radius: 20px;
  background: linear-gradient(
    135deg,
    var(--color-primary),
    var(--color-accent)
  );
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 1.6rem;
  margin-bottom: 2rem;
}

.presentation-text {
  font-size: 1.7rem;
  color: var(--color-base);
}

.presentation-video {
  width: 100%;
  border-radius: 20px;
  margin-bottom: 2rem;
  box-shadow: 0 15px 40px rgba(0,0,0,0.1);
}


/* RESPONSIVE */
@media (max-width: 850px) {
  .hero {
    grid-template-columns: 1fr;
    text-align: center;
    padding: 3rem 2rem;
  }

  .hero-text h1 {
    font-size: 3.4rem;
  }

  .photo-circle {
    margin-top: 2rem;
  }
}
</style>
