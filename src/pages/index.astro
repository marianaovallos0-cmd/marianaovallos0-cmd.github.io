<style>
.hero {
  max-width: 1100px;
  margin: 6rem auto 4rem;
  padding: 0 1.5rem;

  display: grid;
  grid-template-columns: 1.2fr 0.8fr;
  align-items: center;
  gap: 3rem;
}

.hero-text h1 {
  font-size: 2.6rem;
  margin-bottom: 0.8rem;
}

.subtitle {
  color: var(--color-text-muted);
  max-width: 420px;
}

.hero-photo {
  display: flex;
  justify-content: center;
}

.photo-circle {
  width: 220px;
  height: 220px;
  border-radius: 50%;
  background-color: var(--color-surface);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-soft);
  color: var(--color-text-muted);
  font-size: 0.9rem;
}

/* Projects section */
.projects-preview {
  max-width: 1100px;
  margin: 4rem auto;
  padding: 0 1.5rem;
}

.projects-preview h2 {
  margin-bottom: 2rem;
}

.projects-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 2rem;
}

.project-card {
  height: 180px;
  border-radius: var(--radius-lg);
  background-color: var(--color-surface);
  box-shadow: var(--shadow-soft);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.project-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 16px 40px rgba(0, 0, 0, 0.08);
}

/* Responsive */
@media (max-width: 768px) {
  .hero {
    grid-template-columns: 1fr;
    text-align: center;
  }
}
</style>
