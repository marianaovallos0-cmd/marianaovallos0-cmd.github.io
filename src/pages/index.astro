---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Fetch pages only (home)
const allPages = await getCollection('pages');
const indexPage = allPages.find(p => p.slug === 'index');

const title = indexPage?.data.title || 'Portfolio';
const description = indexPage?.data.description || '';
---

<Layout title={title} description={description}>
  <script is:inline>
    document.body.classList.add("home");
  </script>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-text">
      <h1>Your Name</h1>
      <p class="subtitle">
        Portfolio placeholder â€” content will be added later.
      </p>
    </div>

    <div class="hero-photo">
      <div class="photo-circle">
        Photo
      </div>
    </div>
  </section>

  <section class="presentation">
  <div class="presentation-box">
    <h2>Presentation</h2>

    <div class="video-placeholder">
      Video will be added here
    </div>

    <p class="presentation-text">
      Welcome to my personal portfolio.  
      Here you will find my academic projects, technical evidence, and professional growth.
    </p>
  </div>
</section>


  <!-- PORTFOLIO CARDS -->
  <section class="portfolio">
    <div class="portfolio-grid">
      <div class="portfolio-card"></div>
      <div class="portfolio-card"></div>
      <div class="portfolio-card"></div>
    </div>
  </section>
</Layout>

<style>
/* HERO */
.hero {
  max-width: 1100px;
  margin: 8rem auto 6rem;
  padding: 5rem 4rem;

  display: grid;
  grid-template-columns: 1.3fr 0.7fr;
  align-items: center;
  gap: 4rem;

  background: linear-gradient(
    135deg,
    var(--color-primary),
    var(--color-accent)
  );

  color: white;
  border-radius: 40px;
}


.hero-text h1 {
  color: white;
}

.subtitle {
  color: rgba(255,255,255,0.85);
}


.photo-circle {
  width: 240px;
  height: 240px;
  border-radius: 50%;
  background: linear-gradient(
    145deg,
    #ffffff,
    var(--color-bg)
  );
  border: 2px solid var(--color-accent);
  box-shadow: 0 25px 60px rgba(0,0,0,0.08);
  color: var(--color-accent);
}

/* PORTFOLIO */
.portfolio-card {
  height: 220px;
  border-radius: 24px;
  background: #ffffff;
  border: 2px solid transparent;
  box-shadow: 0 15px 40px rgba(0,0,0,0.06);
  transition: all 0.35s ease;
  position: relative;
  overflow: hidden;
}

.portfolio-card::before {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    var(--color-primary),
    var(--color-accent)
  );
  opacity: 0;
  transition: opacity 0.35s ease;
}

.portfolio-card:hover::before {
  opacity: 0.08;
}

.portfolio-card:hover {
  transform: translateY(-10px);
  border-color: var(--color-primary);
}


/* RESPONSIVE */
@media (max-width: 850px) {
  .hero {
    grid-template-columns: 1fr;
    text-align: center;
  }
}

.presentation {
  max-width: 900px;
  margin: 4rem auto 6rem;
  padding: 0 2rem;
}

.presentation-box {
  background: #ffffff;
  border-radius: 32px;
  padding: 3rem;
  box-shadow: 0 20px 50px rgba(0,0,0,0.06);
  text-align: center;
}

.presentation-box h2 {
  margin-bottom: 2rem;
}

.video-placeholder {
  width: 100%;
  aspect-ratio: 16/9;
  border-radius: 20px;
  background: linear-gradient(
    135deg,
    var(--color-primary),
    var(--color-accent)
  );
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 1.6rem;
  margin-bottom: 2rem;
}

.presentation-text {
  font-size: 1.7rem;
  color: var(--color-base);
}

</style>
