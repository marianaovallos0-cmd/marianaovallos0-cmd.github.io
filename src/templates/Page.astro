---
import Layout from '../layouts/Layout.astro';
import { type CollectionEntry } from 'astro:content';

interface Props {
  entry: CollectionEntry<'pages'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const { title, description, thumbnail } = entry.data;

// Image handling: thumbnail is string path to /public/img/...
// In Astro, if it is in public, just use the path.
// If imported, use Image component. Legacy used string paths in frontmatter.
---

<Layout title={entry.data.title}>
  <section class="about-section">
    <div class="about-card">
      <article class="post-content">
        <div class="post-content-body">
          <Content />
        </div>
      </article>
    </div>
  </section>
</Layout>

