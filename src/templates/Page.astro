---
import Layout from '../layouts/Layout.astro';
import { type CollectionEntry } from 'astro:content';

interface Props {
  entry: CollectionEntry<'pages'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const { title, description, thumbnail } = entry.data;
---

<Layout title={entry.data.title}>
  {entry.slug === "bio" ? (
    <section class="about-section">
      <div class="about-card">
        <article class="post-content">
          <div class="post-content-body">
            <Content />
          </div>
        </article>
      </div>
    </section>
  ) : (
    <article class="post-content">
      <div class="post-content-body">
        <Content />

        {entry.slug === "evidencias" && (
          <section class="evidence-section">
            <div class="evidence-grid">

              <div class="evidence-card">
                <div class="evidence-icon">SQL</div>
                <h3 class="evidence-title">SQL Scripts</h3>
                <p class="evidence-desc">
                  Database queries, joins, views, and optimization exercises.
                </p>
              </div>

              <div class="evidence-card">
                <div class="evidence-icon">PL/SQL</div>
                <h3 class="evidence-title">PL/SQL Programs</h3>
                <p class="evidence-desc">
                  Stored procedures, functions, triggers, and database logic.
                </p>
              </div>

              <div class="evidence-card">
                <div class="evidence-icon">NoSQL</div>
                <h3 class="evidence-title">NoSQL Experiments</h3>
                <p class="evidence-desc">
                  Document-based and non-relational database models.
                </p>
              </div>

              <div class="evidence-card">
                <div class="evidence-icon">SYS</div>
                <h3 class="evidence-title">Final Project</h3>
                <p class="evidence-desc">
                  Integrated system with database design and logic.
                </p>
              </div>

            </div>
          </section>
        )}

        {entry.slug === "work" && (
          <section class="work-section">
            <div class="work-grid">

              <div class="work-card">
                <h3 class="work-title">Database Project</h3>
                <p class="work-desc">
                  Design and implementation of relational database systems
                  using SQL and PL/SQL.
                </p>
                <span class="work-tag">SQL</span>
                <span class="work-tag">PL/SQL</span>
              </div>

              <div class="work-card">
                <h3 class="work-title">Cybersecurity Lab</h3>
                <p class="work-desc">
                  Practical security exercises including vulnerability
                  analysis and basic penetration testing.
                </p>
                <span class="work-tag">Security</span>
                <span class="work-tag">Networking</span>
              </div>

              <div class="work-card">
                <h3 class="work-title">Embedded System</h3>
                <p class="work-desc">
                  Microcontroller-based project integrating sensors,
                  control logic, and real-time communication.
                </p>
                <span class="work-tag">STM32</span>
                <span class="work-tag">C</span>
              </div>

            </div>
          </section>
        )}

      </div>
    </article>
  )}
</Layout>
